<StartScreen>:
    on_enter: root.enter()
    test_button: test_button
    clap: clap

    name: 'start'
    FloatLayout:
        size_hint: None, None

    Widget:
        canvas:
            Rectangle:
                source: "images/maze_start.jpg"
                size: self.size
                pos: self.pos

    DPEAButton:
        id: test_button
        text: 'Raise hands over head to start!'
        size: 700, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.8
        color: 0.7, 0.3, 0.8, 1
        on_press: root.transition()

    ImageButton:
        id: clap
        source:'images/clap.png'
        size_hint: 0.5, .8
        center_x: self.width * 1
        keep_ratio: True





