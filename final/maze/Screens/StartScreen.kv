<StartScreen>:
    on_enter: root.enter()
    test_button: test_button
    clap: clap

    name: 'start'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'Raise hands over head to start!'
        size: 100, 100
        x: root.width * 0.45
        y: root.height * 0.8
        color: 0, 0, 0, 1
        on_press: root.transition()

    ImageButton:
        id: clap
        source:'images/clap.png'
        size_hint: 0.5, .8
        center_x: self.width * 1
        keep_ratio: True





