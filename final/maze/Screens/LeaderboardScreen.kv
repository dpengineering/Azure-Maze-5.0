<LeaderboardScreen>:
    #from kivy.clock import Clock
    on_enter: root.enter()
    #on_enter: Clock.schedule_once(self.enter, 3)

    leaderboard: leaderboard
    leaderboard_greeting: leaderboard_greeting
    name: 'leader'

    FloatLayout:
        size_hint: None, None

    Widget:
        canvas:
            Rectangle:
                source: "images/bg.jpg"
                size: self.size
                pos: self.pos

    Label:
        id: title
        # text: 'User | Time'
        # font_size: 40
        size: self.size
        background_normal: 'images/maze_leaderboard.png'
        pos_hint:{"x":0, "y":0.3}
        color: 0, 0, 1, 1

    Label:
        id: leaderboard
        text: ''
        font_size: 50
        # size: 100, 500
        pos_hint:{"x":0, "y":-0.1}
        color: 1, 1, 1, 1
        #on_press: root.enter()

    Label:
        id: leaderboard_greeting
        text: 'Thank you for playing!'
        font_size: 100
        size: 150, 150
        # pos_hint:{"x":0,"y": 0.1}
        center_x: root.width * 0.5
        center_y: root.height * 0.8
        color: 1, 1, 1, 1
